<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Transaction"
    >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Payment"
        android:textSize="45sp"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="30dp" />

    <EditText
        android:id="@+id/editTextCardNum"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="194dp"
        android:ems="10"
        android:hint="Card Number"
        android:inputType="number"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="177dp" />

    <EditText
        android:id="@+id/editTextCVV"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextCardNum"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="CVV"
        android:inputType="number"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="231dp" />

    <Button
        android:id="@+id/btnPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:text="Pay now"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="447dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editTextCardNum"
        android:layout_marginBottom="213dp"
        android:text="Expiratione date"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="296dp" />

    <EditText
        android:id="@+id/editTextMonth"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="152dp"
        android:layout_marginStart="99dp"
        android:ems="10"
        android:hint="MM"
        android:inputType="number"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="326dp" />

    <EditText
        android:id="@+id/editTextYear"
        android:layout_width="63dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="123dp"
        android:ems="10"
        android:hint="YY"
        android:inputType="number"
        tools:layout_editor_absoluteX="191dp"
        tools:layout_editor_absoluteY="326dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="12dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/editTextMonth"
        android:layout_toEndOf="@+id/editTextCVV"
        android:text="/"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="326dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="66dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="109dp"
        app:srcCompat="@drawable/cvv"
        tools:layout_editor_absoluteX="188dp"
        tools:layout_editor_absoluteY="238dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="205dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="139dp"
        app:srcCompat="@drawable/card"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="137dp" />

    <TextView
        android:id="@+id/creditamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="115dp"
        android:text="TextView"
        android:textSize="24sp" />

</RelativeLayout>